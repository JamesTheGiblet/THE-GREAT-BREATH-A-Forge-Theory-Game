<script>
    const consoleEl = document.getElementById('console');
    const emergeEl = document.getElementById('emerge-val');
    
    function log(msg, type = '') {
        const div = document.createElement('div');
        div.className = `log-entry ${type}`;
        div.innerText = `> ${msg}`;
        consoleEl.prepend(div);
    }

    // Example Game Loop logic
    let complexity = 0;
    document.getElementById('start-btn').addEventListener('click', () => {
        log("FORGE INITIALIZED. Simple rules engaging.");
        setInterval(() => {
            let m = document.getElementById('m-val').value / 100;
            let a = document.getElementById('a-val').value / 100;
            
            // Basic Emergence Formula
            complexity += (m * a) - 0.01; 
            if (complexity < 0) complexity = 0;
            
            emergeEl.innerText = (complexity * 10).toFixed(2) + "%";

            if (Math.random() > 0.98) {
                log("DECAY ENGINE DETECTED: Local entropy spike!", "decay-warning");
            }
        }, 100);
    });
</script>

